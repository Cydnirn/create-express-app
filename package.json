{
  "name": "create-express-app",
  "version": "1.0.0",
  "description": "Boilerplate for express following the bulletproof node.js project architecture (https://dev.to/santypk4/bulletproof-node-js-project-architecture-4epf)",
  "main": "index.js",
  "scripts": {
    "test": "nyc ts-mocha -p tsconfig.json src/test/*.spec.ts",
    "dev-build": "node update-dev-import.js",
    "dev": " npm run dev-build && NODE_ENV=development nodemon ./src/app.ts",
    "build": "tsc && node update-build-import.js",
    "start": "pm2 start ./dist/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cydnirn/create-express-app.git"
  },
  "keywords": [
    "Node",
    "Express",
    "create-express-app",
    "Boilerplate",
    "Typescript"
  ],
  "author": "Cydnirn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cydnirn/create-express-app/issues"
  },
  "homepage": "https://github.com/Cydnirn/create-express-app#readme",
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/fs-extra": "^11.0.3",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "imports": {
    "#models/*": "./dist/models/*.js",
    "#routes/*": "./dist/routes/*.js",
    "#controllers/*": "./dist/controllers/*.js",
    "#utils/*": "./dist/utils/*.js",
    "#class/*": "./dist/class/*.js",
    "#events/*": "./dist/events/*.js",
    "#config/*": "./dist/config/*.js",
    "#loaders/*": "./dist/loaders/*.js"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "fs-extra": "^11.1.1",
    "helmet": "^7.0.0"
  }
}